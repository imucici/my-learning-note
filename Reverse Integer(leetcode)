class Solution:
    def reverse(self, x: int) -> int:
        a = str(x)[::-1] ##反轉後
        if x <0:
            b = a.strip("-") #移除負號
            if int(b)>2**31-1:
                return 0
            else:
                return -int(b)
        
        else:
            if int(a) >2**31-1:
                return 0
            else:
                return int(a)
